<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lightblack"
              android:gravity="center|top"
              android:orientation="vertical"
              tools:context=".View.MainMenuFragment"
    >

    <TextView
        android:id="@+id/help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="8dp"
        android:text="@string/hovedmenu_titel"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/solution_picture"
            android:contentDescription="@string/galgelegbillede"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/button_play_game"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightgreen"
                android:text="@string/galgeleg_menu_tekst"
                />

            <Button
                android:id="@+id/button_highscore"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightblue"
                android:text="@string/højeste_score_menu_tekst"
                />

            <Button
                android:id="@+id/button_help"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightblue"
                android:text="@string/hjælp_menu_tekst"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
